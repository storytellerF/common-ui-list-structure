<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.storyteller_f.giant_explorer.dialog.FileOperationDialog.Handler" />

        <variable
            name="handler"
            type="Handler" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/state_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/state_running"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="21dp"
                android:paddingEnd="21dp">

                <TextView
                    android:id="@+id/textView_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="大小：11111\n文件夹：1\n文件：1" />

                <TextView
                    android:id="@+id/textView_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="大小：11111\n文件夹：1\n文件：1" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="21dp"
                android:paddingTop="1dp"
                android:paddingEnd="21dp"
                android:paddingBottom="1dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/textView_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="21dp"
                android:paddingTop="1dp"
                android:paddingEnd="21dp"
                android:paddingBottom="1dp"
                android:singleLine="true" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="21dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="21dp"
                        android:paddingBottom="1dp" />
                </FrameLayout>
            </ScrollView>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/state_done"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_margin="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30sp"
                tools:text="done" />

            <Button
                android:text="close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="5dp"
                android:onClickListener="@{()->handler.close()}" />
        </FrameLayout>
    </FrameLayout>
</layout>