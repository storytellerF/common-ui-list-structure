<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_wallpaper_card"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/wallpaper_preview"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/wallpaper_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/wallpaper_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/wallpaper_preview"
        app:layout_constraintTop_toTopOf="@+id/wallpaper_preview"
        tools:text="TextView" />

    <TextView
        android:id="@+id/wallpaper_uri"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/wallpaper_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/wallpaper_name"
        app:layout_constraintTop_toBottomOf="@+id/wallpaper_name"
        tools:text="TextView" />
</androidx.constraintlayout.widget.ConstraintLayout>